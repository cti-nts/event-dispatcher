{
  "name": "evdobe/event-dispatcher",
  "description": "A process that listens to notifications from an event store and publishes new events to a messaging channel.",
  "authors": [
    {
      "name": "Konstantinos Togias",
      "email": "info@ktogias.gr"
    }
  ],
  "autoload": {
    "psr-4": {
      "Application\\": "Application",
      "Infrastructure\\": "Infrastructure"
    }
  },
  "scripts": {
    "lint": [
      "@fix"
    ],
    "fix": [
      "@rector",
      "@cs-fixer"
    ],
    "format": "@cs-fixer",
    "cs-fixer": "php-cs-fixer fix",
    "phpstan": "phpstan --configuration=./phpstan.neon --memory-limit=-1",
    "stan": "@phpstan",
    "rector": "rector process --no-diffs --config=./rector.php",
    "behat": "behat",
    "phpunit": "phpunit --colors=always tests/unit",
    "test": "@phpunit"
  },
  "require": {
    "doctrine/annotations": "^1.14.3",
    "enqueue/enqueue": "^0.10.19",
    "enqueue/rdkafka": "^0.10.19",
    "php-di/php-di": "^6.4"
  },
  "require-dev": {
    "beberlei/assert": "^3.3.2",
    "behat/behat": "^3.13",
    "curl/curl": "^2.5",
    "friendsofphp/php-cs-fixer": "^3.12",
    "phpspec/prophecy": "^1.17",
    "phpstan/phpstan": "^1.12",
    "phpstan/phpstan-beberlei-assert": "^1.0",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.4",
    "phpunit/phpunit": "^9.6.13",
    "rector/rector": "^1.2"
  },
  "config": {
    "sort-packages": true
  }
}
